# Copie para application.properties e substitua os <> pelos seus valores locais
# Se for rodar o MySQL via Docker compose, veja bloco de "Docker (compose)" abaixo.

# Opção A: rodando banco local (instalado na máquina)
spring.datasource.url=jdbc:mysql://localhost:3306/bookshelf?createDatabaseIfNotExist=true
spring.datasource.username=<SEU_USUARIO_MYSQL>
spring.datasource.password=<SUA_SENHA_MYSQL>

# Opção B: rodando via Docker compose (serviço "mysql")
# spring.datasource.url=jdbc:mysql://mysql:3306/bookshelf
# spring.datasource.username=bookshelf
# spring.datasource.password=bookshelf

spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false

# Segredo para JWT (qualquer string em dev)
jwt.secret=<UM_SEGREDO_LOCAL_ALEATORIO_AQUI>

# Porta da API
server.port=8080
